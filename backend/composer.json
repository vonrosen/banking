{
  "name": "banking/api",
  "description": "Banking API built with Hack/HHVM",
  "type": "project",
  "repositories": [
    {
      "type": "path",
      "url": "/workspace/glue",
      "options": {
        "symlink": false
      }
    }
  ],
  "config": {
    "allow-plugins": {
      "hhvm/hhvm-autoload": true
    }
  },
  "require": {
    "hhvm/hhvm-autoload": "^3.1",
    "hhvm/hsl": "^4.0",
    "hhvm/hsl-experimental": "^4.0",
    "hack-logging/hack-logging": "dev-main",
    "nazg/glue": "@dev"
  },
  "require-dev": {
    "hhvm/hacktest": "^2.0",
    "facebook/fbexpect": "^2.0",
    "hhvm/hhast": "^4.0"
  },
  "autoload": {
    "classmap": ["src/"]
  }
}
